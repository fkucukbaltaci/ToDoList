@model ToDoList.Entity.User
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomHead{
    <style type="text/css">
        .validation-summary-valid.alert-danger {
            display: none;
        }
    </style>
}

<h2>New User</h2>

@using (Html.BeginForm("Add", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger", @role = "alert" })

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label>Name:</label>
        @Html.TextBox("Name", "", new { @class = "form-control", @role = "form" })
    </div>
    <div class="form-group">
        <label>Email:</label>
        @Html.TextBox("Email", "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Password:</label>
        @Html.Password("Password", "", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Register</button>
}

